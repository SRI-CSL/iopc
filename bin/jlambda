#!/usr/bin/perl -w
use warnings;

my $iop = `which iop`;
if(!$iop){
    print "Could not find iop, exiting\n";
    die; 
}
$iop =~ m|(.*)/iop$|;
$iop = $1;

if($ARGV[0]){
    system "java -ea -cp ${iop} g2d/jlambda/ReadEvalPrintLoop $ARGV[0]";
} else {
    system "java -ea  -cp ${iop} g2d/jlambda/ReadEvalPrintLoop";
}
