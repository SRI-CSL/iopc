#!/usr/bin/perl
use warnings;

if(!defined($ENV{IOPBINDIR})){
    print "You must set envionment variable IOPBINDIR!\n";
} else {
    my $iop = "$ENV{IOPBINDIR}";
    if($ARGV[0]){
	system "java -ea -cp ${iop}/iop.jar g2d/jlambda/ReadEvalPrintLoop $ARGV[0]";
    } else {
	system "java -ea  -cp ${iop}/iop.jar g2d/jlambda/ReadEvalPrintLoop";
    }
}
