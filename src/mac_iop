#!/usr/bin/perl -w

use strict;

my $iop = `which iop`;
if(!$iop){
    print "Could not find iop, exiting\n";
    die; 
}
$iop =~ m|(.*)/iop$|;
$iop = $1;


my $maude = `which maude.darwin`;
if(!$maude){
    print "Could not find maude.darwin, exiting\n";
    die; 
}
$maude =~ m|(.*)/maude\.darwin$|;
$maude = $1;

#print "iop_main @ARGV $iop $maude\n";

system("iop_main @ARGV $iop $maude");
